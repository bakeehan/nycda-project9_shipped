<% if !flash[:notice].blank? %>
<div class="boatNotice">
  <%= flash[:notice] %>
</div>
<% end %>

<div class=boatShow>
<h1>Boats</h1>




<div id="boats-showpage" >

<div class="boatImage">
<% if @boat.image.file? %>
  <%= image_tag @boat.image.url(:large) %>
  <% else %>
  <%= image_tag 'boatlogo.png', alt: '' %>
  <% end %>
</div>
<div class="boatName">
  <h4>Boat Name:</h4>
  <p><%= @boat.name%></p>
</div>
<div class="boatName">
    <h4>Containers:</h4>
     <p><%= @boat.containers%></p>
</div>
<div class="boatName">
  <h4>Boat Location:</h4>
  <p><%= @boat.location%></p>
</div>
</div>

<%= link_to "Edit", edit_boat_path %>

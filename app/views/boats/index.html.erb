<% if !flash[:notice].blank? %>
<div class="boatNotice">
  <%= flash[:notice] %>
</div>
<% end %>

<h1>Boats#index</h1>
<p>Find me in app/views/boats/index.html.erb</p>

<%= link_to "New Boat", new_boat_path %>
<br>
<br>
<% @boats.each do |b| %>
<div><a href="/boats/<%= b.id %>"><%= b.name %></a></div>
<% if b.image.file? %>
<%= image_tag b.image.url(:medium) %>
<% else %>
<%= image_tag 'boatlogo.png', alt: '' %>
<%end %>
<div><%= b.containers %> containers</div>
<div><%= b.location %></div>
<br>
<% end %>
